<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Animal_Welfare.RecoverAccount"
             Title="Recover Account">
    <VerticalStackLayout Margin="10,10,5,0" Spacing="5">
        <Label Text="Recover Your Account " FontSize="30"/>
        <Label Text="Enter Your Email Or User Name " FontSize="22"/>
        <Entry Placeholder="Email/UserName" x:Name="ForgotPassword" HeightRequest="50" />
        <Button Text="Send Verification Code" TextColor="White" FontSize="18" BackgroundColor="Orange" VerticalOptions="Center" Clicked="RecoverAccountBtn"/>
    </VerticalStackLayout>
</ContentPage>